# display
alias ls='ls --color=auto'
alias t="tree -C -I '__pycache__'"
alias ta="tree -C -a -I '__pycache__' -I '.git'"

# config
alias br="vim ~/.bashrc"
alias ba="vim ~/.bash_aliases"
alias vv="vim ~/.vimrc"
alias ch="cd ~/.config/hypr ; vim ."
alias dots="cd ~/.dots"
alias nc="vim ~/.dots/files/nixos"

# miscellaneous
alias please="sudo"
alias condac="conda activate"


#!/usr/bin/env bash

# Script To Manage Brightness For Archcraft (in Wayland).
# dependencies: light

# Get brightness
get_backlight() {
	LIGHT=$(printf "%.0f\n" `light -G`)
	echo "${LIGHT}%"
}

# Increase brightness
inc_backlight() {
	light -A 5
}

# Decrease brightness
dec_backlight() {
	light -U 5
}

# Execute accordingly
if [[ "$1" == "--get" ]]; then
	get_backlight
elif [[ "$1" == "--inc" ]]; then
	inc_backlight
elif [[ "$1" == "--dec" ]]; then
	dec_backlight
else
	get_backlight
fi
